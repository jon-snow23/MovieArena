<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#24293E"
    >

    <FrameLayout
        android:id="@+id/home_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/nav"
        />





    <!-- Custom Bottom Navigation -->
    <com.nafis.bottomnavigation.NafisBottomNavigation
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mbn_circleColor="#24293E"
        app:mbn_backgroundBottomColor="#24293E"
        app:mbn_countTextColor="@color/white"
        app:mbn_defaultIconColor="@color/mainColor"
        app:mbn_selectedIconColor="#8EBBFF"
        android:scrollbarSize="30sp"
        app:mbn_shadowColor="@color/mainColor"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
